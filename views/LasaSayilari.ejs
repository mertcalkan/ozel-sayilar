          return infoTxt.innerHTML = `Evet, <span> ${filterInput} </span> sayısı lasa bir sayıdır.`;
        }
        
        else {
          infoTxt.innerHTML = `Hayır, <span> ${filterInput} </span> sayısı lasa bir sayı değildir.`
        }
      }
      else if (filterInput == ""){ 
      infoTxt.innerHTML = ""
         }
      }
    });
    txtInput.addEventListener("keyup", () => {
      filterInput = txtInput.value.toLowerCase().replace(/[^A-Z0-9]/ig, "");
