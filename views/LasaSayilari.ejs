      if (filterInput) {
        return checkBtn.classList.add("active");
      }
      infoTxt.style.display = "none";
      checkBtn.classList.remove("active");
    });

    function primeControl(filterInput) {
      for (var i = 2; i < filterInput; i++)
        if (filterInput % i === 0) {
          return false;
        }



      return filterInput > 1;
    }

    
